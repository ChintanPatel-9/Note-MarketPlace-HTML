
@model dynamic
@{ ViewBag.Title = "Manage Administrators";
    ViewBag.Role = 3;
    Layout = "~/Views/Shared/Register.cshtml"; }

@{ IEnumerable<User> user = ViewData["userdetails"] as IEnumerable<User>;
    IEnumerable<AdminProfile> admins = ViewData["admindata"] as IEnumerable<AdminProfile>; }

<section id="dashboard-second-section">
    <br /><br /><br /><br /><br /><br />
    <div class="container">
        <form class="form-inline ml-auto">

            <div class="dash">
                <span class="dashboard-content">Manage Administrators</span>
            </div>
            <br />
            <div class="md-form my-0" style="float:right">
                <input name="search_progress" style="width:auto;" value="@Request.QueryString["search_progress"]" aria-describedby="null" class="abcd form-control search-bar InputEmail1" placeholder="Search">
                <input type="hidden" style="width:auto;" name="field" value="@Request.QueryString["field"]" />
                <input type="hidden" style="width:auto;" name="field" value="@Request.QueryString["field"]" />

                <button href="#!" class="btn btn-outline-white btn-md my-0 ml-sm-2" type="submit" style="display: inline; background-color: #6255a5; color: #fff; width:auto;"><i class="fa fa-search"></i> Search</button>

            </div>

            <br /><br />
            <div>
            <a href="@Url.Action("AddAdminPage","Home")" class="btn btn-outline-white btn-md my-0 ml-sm-2" type="submit" style="display: inline; background-color: #6255a5; color: #fff; width:auto;"> Add Administrator</a>
            </div>

        </form>


        <div class="row">
            <br /><br />
            <div class="col-md-12">
                <div class="grid-table table-responsive-xl">
                    <table class="table table-bordered table-hover ">
                        <thead>
                            <tr style="cursor:default">

                                <th style="text-align:center" ; scope="col" id="table-shape" class="align-middle">FIRST NAME</th>
                                <th style="text-align:center" ; scope="col" id="table-shape" class="align-middle">LAST NAME</th>

                                <th style="text-align:center" ; scope="col" id="table-shape" class="align-middle">EMAIL</th>
                                <th style="text-align:center" ; scope="col" id="table-shape" class="align-middle">PHONE NO.</th>
                                <th style="text-align:center" ; scope="col" id="table-shape" class="align-middle">DATE ADDED</th>
                                <th style="text-align:center" ; scope="col" class="align-middle">ACTION</th>

                            </tr>
                        </thead>
                        <tbody>


                            @foreach (AdminProfile _admin in admins)
                            {
                                <tr>

                                    @{ foreach (User _user in user)
                                        {
                                            if (_user.P_K_User == _admin.F_K_User)
                                            {
                                                <td class="align-middle" style="text-align:center" id="table-shape">@_user.FirstName</td>
                                                <td class="align-middle" style="text-align:center" id="table-shape">@_user.LastName</td>
                                                <td class="align-middle" style="text-align:center" id="table-shape">@_user.EmailId</td>
                                            }
                                        } }

                                    <td class="align-middle" style="text-align:center" id="table-shape">@_admin.PhoneNumber</td>
                                    <td class="align-middle" style="text-align:center" id="table-shape">@_admin.ModifiedDate</td>
                                    <td class="align-middle" style="text-align:center">
                                        <a><img src="~/img/edit.png" /></a>
                                        <a><img src="~/images/delete.png" /></a>
                                    </td>
                                </tr>
                            }


                            </ tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
