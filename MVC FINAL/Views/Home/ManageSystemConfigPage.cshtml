@model NotesMarketplace.SystemConfiguration

@{ ViewBag.Title = "Manage System Configuration";
    if (ViewBag.IsValid == "true")
    {
        ViewBag.Role = 2;
        Layout = "~/Views/Shared/Register.cshtml";
        ViewBag.IsValid = null;
    }
    else
    {
        Layout = "~/Views/Shared/Non_Register.cshtml";
    } }


<section class="setfooter">
    <!-- First Section -->
    <section>
        <br /><br /><br />
        <div id="user-profile-img">

            <div>
                <img src="~/img/banner-with-overlay.jpg" class="banner" style="height:300px">
                <p class="content-img" style="top:35%">Manage System Configuration</p>
            </div>
        </div>
    </section>

    <form class="user-details-form" method="post">

        <!-- Second Section -->
        <section id="basic-profile-details" class="user-profile  contact-us content-box-md">

            <div class="container">
                
                <div class="row">
                    <div class="col-md-6 col-sm-12">


                        <div class="form-group">
                            <label class="mylabel">Support Email Address *</label>
                            @Html.TextBoxFor(m => m.EmaillId1, new { @class = "form-control InputEmail1", @placeholder = "Enter Email Address", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.EmaillId1)
                        </div>

                        <div class="form-group">
                            <label class="mylabel">Support Phone Number *</label>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control InputEmail1", @placeholder = "Enter Phone Number", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber)
                        </div>

                        <div class="form-group">
                            <label class="mylabel">Email address(es) (for various events sytem will send notifications to users) *</label>
                            @Html.TextBoxFor(m => m.EmailId2, new { @class = "form-control InputEmail1", @placeholder = "Enter Email Address", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.EmailId2)
                        </div>

                        <div class="form-group">
                            <label class="mylabel">Facebook URL</label>
                            @Html.TextBoxFor(m => m.FacebookUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter Facebook URL", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.FacebookUrl)
                        </div>

                        <div class="form-group">
                            <label class="mylabel">Twitter URL</label>
                            @Html.TextBoxFor(m => m.TwitterUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter Twitter URL", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.TwitterUrl)
                        </div>

                        <div class="form-group">
                            <label class="mylabel">LinkdIn URL</label>
                            @Html.TextBoxFor(m => m.LinkInUrl, new { @class = "form-control InputEmail1", @placeholder = "Enter LinkdIn URL", @maxlength = "50" })
                            @Html.ValidationMessageFor(m => m.LinkInUrl)
                        </div>

                        <div class="form-group">
                            <div class="upload-profile-picture">
                                <label class="mylabel" for="InputEmail1">Default Image for notes(if seller do not upload)</label>
                                <div>
                                    
                                    <div class="uploadmypic text-center">

                                        <input name="Book_Picture" type="file" accept="image/*" class="form-control InputEmail1" aria-describedby="emailHelp">

                                    </div>
                                </div>
                               
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="upload-profile-picture">
                                <label class="mylabel" for="InputEmail1">Default profile picture(if seller do not upload)</label>
                                <input name="Book_Picture" type="file" accept="image/*" class="form-control InputEmail1" aria-describedby="emailHelp">
                               
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-3 col-sm-6 col-6">
                                <button type="submit" class="btn btn-primary btn-block login-btn text-uppercase text-center" id="mybtn"><b>submit</b></button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </section>
    </form>
    <!-- Second Section Ends-->
</section>




