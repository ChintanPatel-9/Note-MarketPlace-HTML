@model NotesMarketplace.DownloadedNote
@{
    ViewBag.Title = "BuyerRequests";
    ViewBag.Role = 1;
    Layout = "~/Views/Shared/Register.cshtml";
}

@using (Html.BeginForm())
{
    <br /><br /><br /><br /><br /><br />
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <h4 style="color:#6255a5">Allow Download</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)


        <div class="form-group">
            @Html.LabelFor(model => model.IsApproved,"Allow Download" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsApproved)
                    @Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Allow Download" class="btn btn-default" />
            </div>
        </div>
    </div>
}
